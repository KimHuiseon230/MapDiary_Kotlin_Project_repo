<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_btn_background"
        android:padding="10dp"
        android:text="@string/sendMessage_string"
        android:backgroundTint="@color/gray"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tvSendMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/receiveMessageDate_string"
        android:layout_toLeftOf="@+id/tvSendMessage"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"/>
</RelativeLayout>