<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LogoutFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgView_setting"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_rounded_rounded_bouttpm_lr"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:gravity="left"
            android:padding="5dp"
            android:paddingTop="?attr/actionBarSize"
            android:text="환경 설정"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgView_setting"
            android:layout_alignBaseline="@+id/imgView_setting"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-25dp"
            android:background="@drawable/bg_logout"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="@string/logOut_string"
            android:textColor="@color/black" />
    </RelativeLayout>

</FrameLayout>